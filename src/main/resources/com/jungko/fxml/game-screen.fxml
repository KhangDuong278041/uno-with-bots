      <Button id="greenBtn" fx:id="greenBtn" layoutX="760.0" layoutY="373.0" mnemonicParsing="false" onAction="#doChangeToGreen" prefHeight="60.0" prefWidth="60.0" rotate="180.0" text="Green" textFill="#328c0a" />
      <Button id="yellowBtn" fx:id="yellowBtn" layoutX="674.0" layoutY="373.0" mnemonicParsing="false" onAction="#doChangeToYellow" prefHeight="60.0" prefWidth="60.0" rotate="-90.0" text="Yellow" textFill="#e6d200" />
