      <Button id="amethystBtn" fx:id="amethystBtn" layoutX="760.0" layoutY="373.0" mnemonicParsing="false" onAction="#doChangeToAmethyst" prefHeight="60.0" prefWidth="60.0" rotate="180.0" textFill="#328c0a" />
